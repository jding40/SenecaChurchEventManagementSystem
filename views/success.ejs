<%- include('partials/header') %>

<div class="min-h-[70vh] flex items-center justify-center bg-gray-50">
  <div class="text-center p-8 bg-white rounded-lg shadow-lg max-w-md w-full">
    <div class="mb-4 flex justify-center">
      <div class="rounded-full bg-green-100 p-4">
        <svg
          class="w-12 h-12 text-green-500"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 13l4 4L19 7"
          ></path>
        </svg>
      </div>
    </div>
    <h1 class="text-2xl font-bold text-gray-900 mb-4">Success!</h1>
    <p class="text-gray-600 mb-8">
      <%= message || "Your request has been processed successfully." %>
    </p>
    <div class="space-x-4">
      <a
        href="/"
        class="inline-block bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors"
      >
        Return Home
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
