<%- include('partials/header') %>

<div class="container mx-auto px-4 py-8">
  <!-- Hero Section -->
  <div class="bg-white rounded-lg shadow-lg overflow-hidden mb-8">
    <div class="relative">
      <img
        src="<%= event.imgUrl %>"
        alt="<%= event.title %>"
        class="w-full object-cover"
      />
      <div class="absolute inset-0 bg-black bg-opacity-40"></div>
      <div class="absolute bottom-0 left-0 right-0 p-8 text-white">
        <h1 class="text-4xl font-bold mb-2"><%= event.title %></h1>
        <p class="text-xl mb-4"><%= event.shortDesc %></p>
      </div>
    </div>

    <div class="p-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
        <div class="flex items-center">
          <svg
            class="w-6 h-6 text-blue-500 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            />
          </svg>
          <div>
            <p class="text-sm text-gray-600">Date</p>
            <p class="font-semibold"><%= event.eventDateFormatted %></p>
          </div>
        </div>
        <div class="flex items-center">
          <svg
            class="w-6 h-6 text-blue-500 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          <div>
            <p class="text-sm text-gray-600">Time</p>
            <p class="font-semibold"><%= event.eventTime %></p>
          </div>
        </div>
        <div class="flex items-center">
          <svg
            class="w-6 h-6 text-blue-500 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            />
          </svg>
          <div>
            <p class="text-sm text-gray-600">Location</p>
            <p class="font-semibold"><%= event.eventLocation %></p>
          </div>
        </div>
      </div>

      <div class="prose max-w-none">
        <h2 class="text-2xl font-bold mb-4"><%= event.topic %></h2>
        <p class="text-gray-600 whitespace-pre-wrap"><%= event.fullDesc %></p>
      </div>
    </div>
  </div>

  <!-- Registration Status -->
  <div class="bg-white rounded-lg shadow-lg p-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold">Registration Status</h2>
      <div class="bg-blue-100 text-blue-800 px-4 py-2 rounded-full">
        <span class="font-semibold">Total Registrations:</span>
        <span class="ml-2 font-bold"><%= registrations.length %></span>
      </div>
    </div>

    <!-- Registration Table -->
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <thead class="bg-gray-50">
            <tr>
              <th
                scope="col"
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/8"
              >
                Name
              </th>
              <th
                scope="col"
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/8"
              >
                Gender
              </th>
              <th
                scope="col"
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/8"
              >
                Grade
              </th>
              <th
                scope="col"
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/8"
              >
                Email
              </th>
              <th
                scope="col"
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/8"
              >
                Phone
              </th>
              <th
                scope="col"
                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-3/8"
              >
                Remarks
              </th>
            </tr>
          </thead>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if (registrations.length === 0) { %>
          <tr>
            <td colspan="6" class="px-6 py-4 text-center text-gray-500">
              No registrations found for this event.
            </td>
          </tr>
          <% } else { %> <% registrations.forEach(registration => { %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap w-1/6">
              <div class="text-sm font-medium text-gray-900">
                <%= registration.firstName %> <%= registration.lastName %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap w-1/12">
              <div class="text-sm text-gray-900">
                <%= registration.gender %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap w-1/8">
              <div class="text-sm text-gray-900"><%= registration.grade %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap w-1/4">
              <div class="text-sm text-gray-900"><%= registration.email %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap w-1/4">
              <div class="text-sm text-gray-900"><%= registration.tel %></div>
            </td>
            <td class="px-6 py-4 w-1/4">
              <div class="text-sm text-gray-900">
                <%= registration.remarks || '-' %>
              </div>
            </td>
          </tr>
          <% }); %> <% } %>
        </tbody>
      </table>
    </div>

    <!-- Export Button -->
    <div class="mt-6 flex justify-end">
      <a
        href="/reviseEvent/<%= event.eventId %>"
        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
      >
        <svg
          class="mr-2 -ml-1 h-5 w-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
          />
        </svg>
        Revise this event
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
